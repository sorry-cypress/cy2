{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2016",
    "types": ["jest"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "lib": ["es2016"],
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/__tests__/*.ts", "./src/__tests__/**/*"]
}
